<mvc:View
	controllerName="mrb.offline.demo.controller.Home"
	displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc">
    <Page id="page"	title="{i18n>title}">
        <content>
            <l:VerticalLayout class="sapUiContentPadding" width="100%">
                <l:content>
                    <Text text="Enter VLPLA and NLPLA (Key = Auto):"/>
                    <l:HorizontalLayout>
                        <Button text="Add Database Object" press="onAddObject"/>
                        <Input id="inputVLPLA" type="Text"></Input>
                        <Input id="inputNLPLA" type="Text"></Input>
                    </l:HorizontalLayout>
                    <Text text="Update specific Entity:"/>
                    <l:HorizontalLayout>
                        <Button text="Update Object Store" press="onUpdateOStore" />
                        <Input id="inputKey"      type="Text" placeholder="Enter TANUM ..."></Input>
                        <Input id="inputnewVLPLA" type="Text" placeholder="24-23-1"></Input>
                        <Input id="inputnewNLPLA" type="Text" placeholder="25-23-1"></Input>
                    </l:HorizontalLayout>
                    <Text text="Get all entries in Database"/>
                    <l:HorizontalLayout>
                        <Button text="Read All Database Entries" press="onRead" />
                    </l:HorizontalLayout>
                    <Text text="Read one entry by key"/>
                    <l:HorizontalLayout>
                        <Button text="Get by Key" press="onGetByKey" />                        
                        <Input id="getKey" type="Text" placeholder="some Key"></Input>
                    </l:HorizontalLayout>
                    <Text text="Delete"/>
                    <l:HorizontalLayout>
                        <Button text="Delete by Key" press="onDelete"/>
                        <Input id="deleteKey" type="Text" placeholder="some Key"></Input>
                    </l:HorizontalLayout>
                    <Text text="Delete Object Store"/>
                    <l:HorizontalLayout>
                        <Button text="Delete Object Store" press="onDeleteOStore" />
                    </l:HorizontalLayout>
                    <Text text="Create a new Table"/>
                    <l:HorizontalLayout>
                        <Button id="newTable" text="New Table" press="onCreateNewTable"/>
                    </l:HorizontalLayout>
                    <Text text="Offline/Online - Push to Backend:"/>
                    <l:HorizontalLayout>
                        <Button id="testSync" text="Sync" press="onSync"/>
                        <Input id="syncData" type="Text" placeholder="Some TANUM"></Input>
                    </l:HorizontalLayout>
                </l:content>
            </l:VerticalLayout>
        </content>
    </Page>
</mvc:View>